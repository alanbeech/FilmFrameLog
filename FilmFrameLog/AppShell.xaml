<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FilmFrameLog.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

    xmlns:pages="clr-namespace:FilmFrameLog.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="FilmFrameLog" BackgroundColor="Aquamarine">

    <TabBar>
        <Tab Title="In Use"
             Icon="home">
            <ShellContent ContentTemplate="{DataTemplate pages:CamerasInUsePage}" />
        </Tab>
        <Tab Title="Cameras"
             Icon="camera">
            <ShellContent ContentTemplate="{DataTemplate pages:MyCamerasPage}" />
        </Tab>
        <Tab Title="Films"
             Icon="film">
            <ShellContent ContentTemplate="{DataTemplate pages:MyFilmStockPage}" />
        </Tab>
    </TabBar>
</Shell>
